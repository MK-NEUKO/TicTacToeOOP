<Window x:Class="MichaelKoch.TicTacToe.Ui.WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:MichaelKoch.TicTacToe.Ui.WPFClient.UserControls"
        xmlns:sampleData="clr-namespace:MichaelKoch.TicTacToe.Ui.WPFClient.SampleData"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="TicTacToe" Height="650" Width="850">

    <DockPanel Background="{StaticResource TTTBackgroundDarkGrey}">

        <uc:MenuView DockPanel.Dock="Top"/>
        
        <Grid DockPanel.Dock="Left"
              Width="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <uc:PlayerGameBoard Grid.Row="0">
            </uc:PlayerGameBoard>

            <uc:GameInfoView Grid.Row="1">
            </uc:GameInfoView>

        </Grid>

        <Grid DockPanel.Dock="Right"
              Width="auto"
              Height="Auto">
            <Image Source="/Resources/TTTVisualMinimax.jpg"
                   Stretch="Fill"/>

        </Grid>
        
    </DockPanel>
    
    
</Window>
