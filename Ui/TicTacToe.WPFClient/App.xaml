<Application x:Class="NEUKO.TicTacToe.WPFClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="clr-namespace:NEUKO.TicTacToe.WPFClient"
             Startup="Application_Startup">
    <Application.Resources>

        <Color x:Key="GameBoardXOn">LawnGreen</Color>

        <DataTemplate x:Key="MenuViewModelDataTemplate" DataType="{x:Type l:IMenuViewModel}">
            <l:MenuView/>
        </DataTemplate>

        <DataTemplate x:Key="GameBoardViewModelDataTemplate" DataType="{x:Type l:IGameBoardViewModel}">
            <l:GameBoardView/>
        </DataTemplate>

        <DataTemplate x:Key="GameInfoViewModelDataTemplate" DataType="{x:Type l:IGameInfoViewModel}">
            <l:GameInfoView/>
        </DataTemplate>
        
    </Application.Resources>
    
</Application>
